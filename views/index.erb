<!DOCTYPE html>
<html>
  <head>
    <title>Buzzoola Pub</title>
    <%= include_gon namespace: 'PubData' %>
    <script type="text/javascript" src="/js/vendor.js"></script>
    <script type="text/javascript" src="/js/i18n.js"></script>
    <script type="text/javascript" src="/js/app.js"></script>
    <style type="text/css">
      * { margin: 0; padding: 0; }
      body { padding: 30px 50px; }
      p { margin-bottom: 1.5em; }
      hr { margin: 1em 0; }
    </style>
  </head>

  <body ng-app="BuzzoolaPub">

    <div id="posts" ng-controller="BuzzoolaPub.PostsCtrl">
      <section id="locale-switch">
        <a href="javascript:;" ng-click="setLocale('en')" data-locale="en">EN</a> / 
        <a href="javascript:;" ng-click="setLocale('ru')" data-locale="ru">RU</a>
      </section>
      <hr/>

      <p class="post" ng-repeat="post in posts">
        <b class="post-headline">{{ 'posts.headline' | translate:{author: post.author} }}:</b><br/>
        {{ post.text }}
      </p>
    </div>

  </body>
</html>

<!DOCTYPE html>
<html>
  <head>
    <title>Buzzoola Pub</title>
    <script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/underscore.js/1.8.3/underscore-min.js"></script>
    <script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.16/angular.min.js"></script>
    <%= include_gon namespace: 'PubData' %>
    <script type="text/javascript" src="/js/main.js"></script>
    <style type="text/css">
      * { margin: 0; padding: 0; }
      body { padding: 30px 50px; }
      p { margin-bottom: 1.5em; }
    </style>
  </head>

  <body ng-app="BuzzoolaPub">

    <div ng-controller="BuzzoolaPub.PostsCtrl">
      <p class="post" ng-repeat="post in posts">
        <b>{{ post.author }}</b> says:<br/>
        {{ post.text }}
      </p>
    </div>

  </body>
</html>

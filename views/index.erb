<!DOCTYPE html>
<html>
  <head>
    <title>Buzzoola Pub</title>
    <%= include_gon namespace: 'PubData' %>
    <script type="text/javascript" src="/js/vendor.js"></script>
    <script type="text/javascript" src="/js/app.js"></script>
    <style type="text/css">
      * { margin: 0; padding: 0; }
      body { padding: 30px 50px; }
      p { margin-bottom: 1.5em; }
    </style>
  </head>

  <body ng-app="BuzzoolaPub">

    <div id="posts" ng-controller="BuzzoolaPub.PostsCtrl">
      <p class="post" ng-repeat="post in posts">
        <b>{{ post.author }}</b> says:<br/>
        {{ post.text }}
      </p>
    </div>

  </body>
</html>
